{
    "functions": {
      "api/server.js": {
        "runtime": "nodejs14.x",
        "memory": 1024
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }  